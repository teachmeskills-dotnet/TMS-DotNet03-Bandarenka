@model IEnumerable<FilmsViewModel>

<div class="indent__margin-bottom">
    <a asp-controller="Films" asp-action="Create">
        <input class="button button__link button__orange" type="button" value="Добавить" />
    </a>
</div>

@if (Model.Any())
{
    foreach (var films in Model)
    {
        
            <div>
                <a class="todo__text" asp-controller="FIlms" asp-action="Detail" asp-route-id="@films.Id">
                    <span>@films.FilmsName</span>
                </a>
                <p> Название: @films.FilmsName</p>
            </div>
            <div>
                <p> Комментарий: @films.Description</p>
            </div>
       
    }
}
else
{
    <h1>Список групп пуст</h1>
}